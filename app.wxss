/**app.wxss**/
@import "/lib/style/font.wxss";
@import "/components/wux.wxss";

.container {
  margin: 0 15rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.width100{
  width: 100%;
  box-sizing:border-box;
}

.display-none{
  display: none;
}

.flex-box{
  display: flex;
}
.flex-1{
  flex: 1;
}
.flex-2{
  flex: 2;
}
.flex-3{
  flex: 3
}
.flex-4{
  flex: 4;
}

/* 搜索  */
.search-box{
  padding: 10rpx;
  background-color: #e3e3e3;
}
.search-input{
  border: 2px solid #e3e3e3;
  border-radius: .7rem;
  background-color: #fff;
  padding-left: 20rpx;
  font-size: 24rpx;
  height:1.4rem;
  line-height: 1.4rem;
  text-overflow:clip;
  overflow:hidden;
  white-space:nowrap;
  font-family:UICTFontTextStyleBody;
  min-height:1.4rem;
  color: #8d8d8d;
}

/* 列表 */
.list-box{
  flex-wrap: wrap;
}
.list-box > view{
  position: relative;
  margin-top: 10rpx;
  width: 350rpx;
  height: 400rpx;
  text-align: center;
  box-sizing: border-box;
}
.list-box > view:nth-child(2n){
  margin-left: 20rpx;
}
.list-box > view view{
  width: 350rpx;
  height: 400rpx;
}
.list-box view image{
  width: 100%;
  height: 100%;
}
.list-box > view text{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  color: #fff;
  background-color: rgba(0,0,0,.5);
}

/* 点击唤起客服  */
.fixed-btn{
  position:fixed;
  bottom:30rpx;
  right:30rpx;
  padding:0;
  width:80rpx;
  height:80rpx;
  line-height:80rpx;
  border-radius:50%;
  border:none;
  color:#fff;
  background-color:#1AAD16;
}