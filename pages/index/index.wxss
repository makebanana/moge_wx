 /**index.wxss**/
/* 轮播图  */
.index-swiper {
  width: 100%;
  height: 250rpx;
  margin-top: 10rpx;
  overflow: hidden;
}
.swipe-item {
  width:100%;
  height: 100%;
}

/* 首页导航  */
.index-nav{
  margin-top: 10rpx;
  padding: 10rpx 30rpx;
  border: 1px solid #e3e3e3;
}
.nav-item{
  margin: 0 30rpx;
  padding:18rpx;
  width: 100rpx;
  height: 100rpx;
  border: 1px #e3e3e3 solid;
  border-radius: 50rpx;
  text-align: center;
  font-size: 26rpx;
  vertical-align: middle;
  box-sizing:border-box;
  color: #fff;
  background-color: #f61d4b;
}
.nav-item text{
  display: block;
  line-height: 30rpx;
}
.nav-item.qita{
  background-image: linear-gradient(to bottom, #2aafa1, #2ed2c4);
}

/* 分类  */
.item-title{
  margin-top: 10rpx;
  padding: 0 20rpx;
  border: 1px solid #e3e3e3;
  font-size: 30rpx;
}
.item-title text:last-child{
  text-align: right;
}
.item-title .icon-tupian{
  font-size: 36rpx;
}

/* 关于  */
.index-about{
  margin-top: 20rpx;
  padding: 20rpx;
  border: 1px solid #e3e3e3;
}
.about-content{
  margin-top: 20rpx;
  border-top: 1px solid #e3e3e3;
  padding: 20rpx 10rpx 10rpx;
  align-items:center;
  font-size: 24rpx;
  color: #8d8d8d;
}
.about-content image{
  margin: 0 30rpx;
  width: 150rpx;
  height: 150rpx;
}
.about-content text{
  display:inline-block;
  width:28rpx;
  word-break: break-all;
}

/* 页脚  */
.index-footer{
  margin-top: 20rpx;
  padding: 20rpx;
  border-top: 1px solid #e3e3e3;
}
.index-footer > view:last-child{
  margin-top: 40rpx;
}
.index-footer .flex-box .flex-1 view{
  margin-top: 20rpx;
}