/* detail.wxss */
/* 外壳*/
.detail-wrap{
  position: relative;
  padding: 0 20rpx;
}

.make-like{
  position: absolute;
  top: 0;
  right: 30rpx;
}
.make-like .iconfont{
  font-size: 60rpx;
  color: #f00;
}

/* 标题  */
.detail-title{
  font-size:52rpx;
  color:#000;
  margin-top:20rpx;
  font-weight:700;
  text-decoration: underline;
}

.detail-title text{
  margin-left:20rpx;
  font-size: 24rpx;
  color: #f00;
  text-decoration: none;
}

/*  介绍  */
.detail-intro{
  margin:30rpx 0;
  padding-bottom:20rpx;
  font-size:32rpx;
  border-bottom:1px solid #e3e3e3;
}
.intro-indent{
  margin-left:20px;
  display:inline-block;
}

/* 图片组  */
.detail-img-box image{
  width: 100%;
}

/* 底部图片  */

.logo-footer{
  height: 240rpx;
}
.logo-footer image{
  width: 100%;
  height: 100%;
}