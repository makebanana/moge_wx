/* center.wxss */

.info-box{
  position: relative;
  margin: 60rpx auto;
  padding: 30rpx 20rpx 20rpx;
  width: 70%;
  text-align: center;
  border: 2px solid #e3e3e3;
  border-radius: 20px;
}
.info-box::before{
  position: absolute;
  top: -12px;
  left: 10%;
  display: inline-block;
  width: 10%;
  height: 15px;
  content: '';
  background-color: #fff;
  border: 2px solid #e3e3e3;
  border-bottom: none;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
.info-box::after{
  position: absolute;
  top: 10px;
  right: 10%;
  display: inline-block;
  width: 10%;
  height: 10px;
  content: '';
  background-color: #fff;
  border: 2px solid #e3e3e3;
  border-radius: 5px;
}
.info-box image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 2px solid #e3e3e3;
}
.info-box view{
  margin-top: 10rpx;
}

.info-items{
  margin: 0 auto;
  width: 80%;
  padding: 20rpx;
  border: 2px solid #e3e3e3;

}
.center-group{
  text-align: center;
}

.center-group > view{
  margin: 2%;
  width: 46%;
}

.center-group > view view{
  border: 2px solid #e3e3e3;
  border-radius: 20rpx;
}

.center-group view image{
  margin: 75rpx 50rpx;
  width: 100rpx;
  height: 100rpx;
}
.center-group > view text{
  font-size: 28rpx;
  vertical-align: top;
  color: #262626;
}

.logo-footer{
  height: 240rpx;
}
.logo-footer image{
  width: 100%;
  height: 100%;
}